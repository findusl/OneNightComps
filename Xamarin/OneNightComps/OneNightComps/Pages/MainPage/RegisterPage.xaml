<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneNightComps.Pages.MainPage.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="UserNameEntry" Placeholder="Username">
                <Entry.Keyboard>
                    <Keyboard x:FactoryMethod="Create">
                        <x:Arguments>
                            <KeyboardFlags>CapitalizeNone</KeyboardFlags>
                        </x:Arguments>
                    </Keyboard>
                </Entry.Keyboard>
            </Entry>
            <!-- Add return type and return action -->
            <Entry x:Name="PasswordEntry" IsPassword="True" Placeholder="Password" />
            <Entry x:Name="EMailEntry" Keyboard="Email" ReturnType="Send" Placeholder="EMail"/>
            <Button Pressed="OnRegisterPressed" Text="Register"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>