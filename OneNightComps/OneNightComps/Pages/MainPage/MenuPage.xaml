<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneNightComps.Pages.MainPage.MenuPage" Title="Menu">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="One night comps"/>
            <Label x:Name="UserNameLabel" IsVisible="False"/>
            <ListView x:Name="OptionsListView" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <StackLayout/>
                </ListView.Footer>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>